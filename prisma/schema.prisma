generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id             String   @id @default(cuid())
  email          String   @unique
  createdAt      DateTime @default(now()) 
  monthlyConfigs MonthlyConfig[]
  expenses       Expense[]
}

model MonthlyConfig{
  id           String @id @default(cuid())
  userId       String
  month        String 
  budget       Int 
  limit        Int
  savingReason String
  user User @relation(fields: [userId], references: [id])
  @@unique([userId, month])
}

model Expense{
  id           String @id @default(cuid())
  userId       String
  month        String
  description  String
  amount       Int
  createdAt    DateTime @default(now())
  user User @relation(fields: [userId], references: [id])

}